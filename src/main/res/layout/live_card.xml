<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/card_margin"
    tools:context=".LiveCardService">

    <TextView
        android:id="@+id/messages"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="60px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/dropletName_0"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="30px"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/dropletName_1" />

    <TextView
        android:id="@+id/dropletStatus_0"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="30px" />

    <TextView
        android:id="@+id/dropletName_1"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30px"
        android:layout_toStartOf="@+id/dropletStatus_1"
        android:layout_alignTop="@+id/dropletStatus_1"
        android:layout_alignBottom="@+id/dropletStatus_1"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/dropletStatus_1"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="60px"
        android:textSize="30px" />

    <TextView
        android:id="@+id/dropletName_2"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="30px"
        android:layout_marginTop="120px"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/dropletName_1" />

    <TextView
        android:id="@+id/dropletStatus_2"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="120px"
        android:textSize="30px" />

    <TextView
        android:id="@+id/dropletName_3"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="30px"
        android:layout_marginTop="180px"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/dropletName_2" />

    <TextView
        android:id="@+id/dropletStatus_3"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="180px"
        android:textSize="30px" />

    <TextView
        android:id="@+id/dropletName_4"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="30px"
        android:layout_alignTop="@+id/dropletStatus_4"
        android:layout_toStartOf="@+id/dropletStatus_4" />

    <TextView
        android:id="@+id/dropletStatus_4"
        android:layout_width="249px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="230px"
        android:textSize="30px" />

</RelativeLayout>

